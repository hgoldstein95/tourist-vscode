{
    "name": "tourist",
    "displayName": "Tourist",
    "description": "A tool for making and viewing guided tours of code bases.",
    "version": "0.0.1",
    "publisher": "hgoldstein95",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:*.tour"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.gotoTourStop",
                "title": "Go to tour stop",
                "category": "Tourist"
            },
            {
                "command": "extension.addTourStop",
                "title": "Add a tour stop",
                "category": "Tourist"
            },
            {
                "command": "extension.nextTourstop",
                "title": "Go to next tour stop",
                "category": "Tourist"
            },
            {
                "command": "extension.prevTourstop",
                "title": "Go to previous tour stop",
                "category": "Tourist"
            },
            {
                "command": "extension.deleteTourStop",
                "title": "Delete a tour stop",
                "category": "Tourist"
            },
            {
                "command": "extension.moveTourstopUp",
                "title": "Move a tour stop up",
                "category": "Tourist"
            },
            {
                "command": "extension.moveTourstopDown",
                "title": "Move a tour stop down",
                "category": "Tourist"
            },
            {
                "command": "extension.editTitle",
                "title": "Edit a tour stop's title",
                "category": "Tourist"
            },
            {
                "command": "extension.editMessage",
                "title": "Edit a tour stop's message",
                "category": "Tourist"
            },
            {
                "command": "extension.startTour",
                "title": "Start a tour",
                "category": "Tourist"
            },
            {
                "command": "extension.newTour",
                "title": "Create a new tour",
                "category": "Tourist"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "touristView",
                    "name": "Tourist"
                }
            ]
        },
        "menus": {
            "editor/context": [
                {
                    "command": "extension.addTourStop",
                    "group": "Tourist"
                }
            ],
            "view/item/context": [
                {
                    "command": "extension.editTitle"
                },
                {
                    "command": "extension.editMessage"
                },
                {
                    "command": "extension.deleteTourStop"
                },
                {
                    "command": "extension.moveTourstopUp"
                },
                {
                    "command": "extension.moveTourstopDown"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.addTourStop",
                "key": "Ctrl+Shift+S",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.nextTourstop",
                "key": "Ctrl+Shift+Alt+J"
            },
            {
                "command": "extension.prevTourstop",
                "key": "Ctrl+Shift+Alt+K"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "@types/chai": "^4.1.7",
        "@types/showdown": "^1.9.2",
        "chai": "^4.2.0",
        "showdown": "^1.9.0"
    }
}
