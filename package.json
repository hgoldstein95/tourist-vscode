{
    "name": "tourist",
    "displayName": "Tourist",
    "description": "A tool for making and viewing guided tours of code bases.",
    "version": "0.0.1",
    "publisher": "hgoldstein95",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:*.tour"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.gotoTourStop",
                "title": "Go to tour stop",
                "category": "Tourist"
            },
            {
                "command": "extension.addTourStop",
                "title": "Add a tour stop",
                "category": "Tourist"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "touristView",
                    "name": "Tourist"
                }
            ]
        },
        "menus": {
            "editor/context": [
                {
                    "command": "extension.addTourStop",
                    "group": "Tourist"
                }
            ]
        },
        "keybindings": {
            "command": "extension.addTourStop",
            "key": "Ctrl+Shift+S",
            "when": "editorTextFocus"
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
